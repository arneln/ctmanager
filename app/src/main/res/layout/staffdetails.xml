<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ProfilePhoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/PhotoCircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignBottom="@id/ProfilePhoto"
                android:layout_alignLeft="@id/ProfilePhoto"
                android:layout_alignRight="@id/ProfilePhoto"
                android:layout_alignTop="@id/ProfilePhoto"
                android:src="@mipmap/online_list" />
        </RelativeLayout>

        <!--android:background="@drawable/img"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/ProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/action_bar_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ProfileFullN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FullName"
                android:textColor="@color/action_bar_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/ProfileShiftS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift Start"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileShiftE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift End"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfilePosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/ProfileSSTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4h 30m"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileSETrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4h 30m"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileTeamTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Big Boss"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfilePosTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bossing Savings"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/ProfileStatusTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Azz Zined"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/watata"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:background="#d3d3d3" />

    <LinearLayout
        android:id="@+id/SndPng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watata"
        android:clickable="true"
        android:onClick="editActions"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileSendping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/watata"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_ping" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="clickMe"
            android:paddingLeft="20dp"
            android:text="@string/sendp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/watata2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SndPng"
        android:background="#d3d3d3" />

    <LinearLayout
        android:id="@+id/SndMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watata2"
        android:onClick="editActionss"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_message" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/watata3"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="Send a Message"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/watata3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SndMsg"
        android:background="#d3d3d3" />

    <LinearLayout
        android:id="@+id/SndRep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watata3"
        android:onClick="editActionsss"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_report" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="What are you working on?"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/watata4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SndRep"
        android:background="#d3d3d3" />

    <LinearLayout
        android:id="@+id/SndMet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watata4"
        android:onClick="editActionssss"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileMetrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_metrics" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="View Metrics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/watata5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/SndMet"
        android:background="#d3d3d3" />

    <LinearLayout
        android:id="@+id/SndFav"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/watata5"
        android:onClick="editActionsssss"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/icon_unfavourite" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="Set as Favorite"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>
